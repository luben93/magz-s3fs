<h1> index listing all articels</h1>

<%= link_to 'mew article', new_article_path %>
<table>
  <tr>
    <th>title</th>
    <th>text</th>
    <th colspan="3"></th>
  </tr>
  <% @articles.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.text %> </td>
        <td><%= link_to 'Show', article_path(a) %></td>
        <td><%= link_to 'Edit', edit_article_path(a) %></td>
        <td><%= link_to 'Destroy', article_path(a),
                        method: :delete,
                        data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>