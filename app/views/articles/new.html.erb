<h1>new article</h1>
<%= form_for :article ,url: articles_path do |f| %>

    <% if @article.errors.any? %>
    <div id="error explaind">
      <h2>
        <%= pluralize(@article.errors.count,"errors") %>
        prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
    <% end %>
<p>
  <%= f.label :title %> <br>
  <%= f.text_area :title %>
